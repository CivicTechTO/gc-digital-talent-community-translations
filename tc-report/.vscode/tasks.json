{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with Jekyll in Docker",
      "type": "shell",
      "command": "docker",
      "args": ["run", "--rm", "--volume=\"${PWD}:/srv/jekyll\"", "-it", "jekyll/jekyll", "jekyll", "build"],

      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": "build"
    },
    {
      "label": "Build and watch with Jekyll in Docker",
      "type": "shell",
      "command": "docker",
      "args": ["run", "--rm", "--volume=\"${PWD}:/srv/jekyll\"", "-it", "jekyll/jekyll", "jekyll", "build", "--watch"],

      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": "build"
    }
  ]
}
