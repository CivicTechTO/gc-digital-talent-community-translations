{
  "private": true,
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "16.16.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@8.0.0",
  "workspaces": [
    "apps/*",
    "frontend/admin",
    "frontend/common",
    "frontend/talentsearch",
    "packages/*"
  ],
  "scripts": {
    "build": "h2-build && turbo run build --filter='./apps/*' --filter='./frontend/*' --filter='!@gc-digital-talent/e2e'",
    "build:all": "turbo run build",
    "build:css": "h2-build",
    "build:project": "turbo run build",
    "codegen": "turbo run codegen --filter='./apps/*' --filter='./frontend/*'",
    "intl-extract": "turbo run intl-extract --filter='./apps/*' --filter='./frontend/*'",
    "intl-compile": "turbo run intl-compile --filter='./apps/*' --filter='./frontend/*'",
    "dev": "turbo run dev --filter='./apps/*' --filter='./frontend/*' --filter='!@gc-digital-talent/e2e'",
    "dev:project": "turbo run dev",
    "lint": "turbo run lint",
    "storybook:project": "npm run storybook",
    "storybook": "MERGE_STORYBOOKS=true npm run storybook --workspace=admin",
    "test": "turbo run test",
    "watch": "turbo run watch --filter=@gc-digital-talent/web",
    "e2e": "turbo run e2e --filter=@gc-digital-talent/e2e",
    "e2e:open": "turbo run e2e:open --filter=@gc-digital-talent/e2e",
    "e2e:run:all": "turbo run e2e:run:all --filter=@gc-digital-talent/e2e",
    "e2e:run:inspect": "turbo run e2e:run:inspect --filter=@gc-digital-talent/e2e",
    "tsc": "turbo run tsc"
  },
  "devDependencies": {
    "@hydrogen-css/hydrogen": "2.0.0-beta.33",
    "eslint-config-custom": "*",
    "prettier": "^2.8.1",
    "turbo": "^1.6.3"
  }
}
